extends layout

block content
  h1= title
  p Welcome to #{title}

  .row
  .col-md-6.col-md-offset-3
    form(method='POST' action='/login')
      div.form-group
        input.form-control(type='text' id='username' placeholder='username' name='username' required autocomplete="off")
      div.form-group
        input.form-control(type='password' id='password' placeholder='password' name='password' required autocomplete="off")
      button.btn.btn-primary(type='submit') Log in

      h4= password

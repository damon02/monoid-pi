extends layout

block content
  .container

    .row
      .col-4

      <div class="col-md-4 col-md-offset-4" style="text-align:center">
        h1= 'Monoid NIDS'
        span='Network monitoring made simple'
        img(width='150px' height='150px' src='images/mstile-150x150.png')

        br
        br
        div 
          form(method='POST' action='/login')
            input(type="hidden" name="_csrf" value=csrfToken)
            div.form-group(style="text-align:center" )
              input.form-control(style="text-align:center" value=username type='text' id='username' placeholder='username' name='username' required autocomplete="off")
            div.form-group(style="text-align:center" )
              input.form-control(style="text-align:center"   type='password' id='password' value=password placeholder='password' name='password' required autocomplete="off")
            br
            button.btn.btn-primary(type='submit') Log in
        br
        br
        if message && message.length
        strong #{message}
      </div>



            